{
	"compilerOptions": {
		"strict": true,
		"skipLibCheck": true,

		"target": "esnext",
		"module": "esnext",
		"declaration": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,

		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",
		"lib": ["esnext", "dom"],
		"types": ["node"],
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"exclude": ["node_modules", "dist", "examples", "__tests__/e2e/reference"]
}
